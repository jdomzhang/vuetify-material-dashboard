.v-alert
  .v-alert__dismissible .v-icon
    color: rgba($white, 0.5)
    font-size: ($font-size-default + 2)
  .v-alert__icon.v-icon
    font-size: $font-size-alert-icon
    color: $white
.v-snack
  .v-icon:not(:first-child)
    color: rgba($white, 0.5)
    margin-left: ($margin-general + 1)
  .v-icon:first-child
    font-size: $font-size-alert-icon
  .v-snack__content
    padding: $padding-general $padding-general + 5
    height: auto
  .v-snack__wrapper
    border-radius: ($border-radius-base + 1)
.v-snack .v-snack__wrapper,
.v-alert
  alert-shadow("info", lighten($brand-info, 5%))
  alert-shadow("success", $brand-success)
  alert-shadow("error", $brand-danger)
  alert-shadow("warning", $brand-warning)
  alert-shadow("purple", $brand-primary)
.v-snack
  notifications-color("info", lighten($brand-info, 5%))
  notifications-color("success", $brand-success)
  notifications-color("error", $brand-danger)
  notifications-color("warning", $brand-warning)
  notifications-color("purple", $brand-primary)